                            )
                        }
                    }
                }
                stage("maryfarm-plant-service") {
                    when{
                        branch 'maryfarm-plant-service'
                    }
                    steps{
                        updateGitlabCommitStatus name: 'maryfarm-plant-service', state: 'running'
