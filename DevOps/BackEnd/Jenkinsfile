                        }
                    }
                }
            }
        }
    }
    post {
        failure {
            updateGitlabCommitStatus name: 'Spring', state: 'failed'
        }
        success {
            updateGitlabCommitStatus name: 'Spring', state: 'success'
        }
        aborted {
            updateGitlabCommitStatus name: 'Spring', state: 'canceled'
        }
    }
