                    when{
                        branch 'maryfarm-user-service'
                    }
                    steps{
                        updateGitlabCommitStatus name: 'maryfarm-user-service', state: 'running'
                        node(slave_back){
                            build(
                                job: "POD-CI-Pipeline-AWS", 
                                parameters: [string(name:"BRANCH_NAME", value:"${env.BRANCH_NAME}")]
                            )
                        }
                    }
                }
